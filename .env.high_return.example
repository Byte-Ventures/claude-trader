#############################
# Environment / Mode
#############################

# "paper" = simulated trading, "live" = real trading
TRADING_MODE=paper

# "dev" or "prod" (mostly logging / verbosity)
APP_ENV=prod


#############################
# Exchange configuration
#############################

EXCHANGE=kraken

# Kraken API keys (REQUIRED for live mode)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Aggressive bot works on BTC-EUR (more stable than BTC-USD for EUR account)
TRADING_PAIR=BTC-EUR

# Main loop interval (seconds)
# 60s = more responsive but more API calls
CHECK_INTERVAL_SECONDS=60


#############################
# Paper trading initial balances
#############################

# Approx. 100,000 SEK ≈ 8,700 EUR
PAPER_INITIAL_USD=8700
PAPER_INITIAL_BTC=0


#############################
# Strategy parameters (HIGH RETURN)
#############################

# Faster RSI for more signals
RSI_PERIOD=7
RSI_OVERSOLD=25
RSI_OVERBOUGHT=80

# Faster EMAs – more reactive trend component
EMA_FAST=8
EMA_SLOW=17

# Standard MACD, used as confirmation
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Slightly tighter Bollinger Bands for more extreme touches
BOLLINGER_PERIOD=20
BOLLINGER_STD=1.8

# Standard ATR
ATR_PERIOD=14

# Lower threshold => more signals (and more risk)
SIGNAL_THRESHOLD=40


#############################
# Position sizing & per-trade risk (HIGH)
#############################

# Allow very large position when signal is strong
MAX_POSITION_PERCENT=90.0

# Target size used by PositionSizer for strong signals
POSITION_SIZE_PERCENT=85.0

# ATR-based levels:
# Tight SL for quick exits, wide TP to let winners run
STOP_LOSS_ATR_MULTIPLIER=1.1
TAKE_PROFIT_ATR_MULTIPLIER=2.2
TRAILING_STOP_ATR_MULTIPLIER=0.8

# Minimum order size in quote currency (EUR)
MIN_ORDER_SIZE_USD=10.0


#############################
# Loss limiter (tighter than "YOLO", but still aggressive)
#############################

# Max daily portfolio loss before trading is halted
MAX_DAILY_LOSS_PERCENT=8.0

# Max hourly portfolio loss before trading is paused
MAX_HOURLY_LOSS_PERCENT=2.5


#############################
# Circuit breaker
#############################

# If price moves more than 7% in one iteration, stop trading
CIRCUIT_MAX_PRICE_MOVE=0.07

# Max consecutive errors before breaker escalates
CIRCUIT_MAX_ERRORS=3

# Cooldowns (seconds) for different breaker levels
CIRCUIT_YELLOW_COOLDOWN=300
CIRCUIT_RED_COOLDOWN=900
CIRCUIT_BLACK_COOLDOWN=3600


#############################
# Kill switch
#############################

# If this file exists, bot must not place new trades
KILL_SWITCH_FILE=./kill_switch.flag


#############################
# Database / Logging
#############################

DATABASE_URL=sqlite:///./data/trading_bot_high_return.db

LOG_LEVEL=INFO
LOG_FILE=./logs/trading_bot_high_return.log


#############################
# Notifications (optional)
#############################

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

ENABLE_TELEGRAM_NOTIFICATIONS=false

