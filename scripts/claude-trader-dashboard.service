[Unit]
Description=Claude Trader Dashboard
After=network-online.target claude-trader.service
Wants=network-online.target
Requires=claude-trader.service

[Service]
Type=simple
User=trader
Group=trader
WorkingDirectory=/opt/claude-trader
ExecStart=/opt/claude-trader/venv/bin/python -m src.dashboard.server
Restart=always
RestartSec=5

# Environment
Environment=PYTHONUNBUFFERED=1

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/opt/claude-trader/data /opt/claude-trader/logs

# Resource limits
MemoryMax=256M
CPUQuota=25%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claude-trader-dashboard

[Install]
WantedBy=multi-user.target
