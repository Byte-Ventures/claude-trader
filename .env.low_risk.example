#############################
# Environment / Mode
#############################

TRADING_MODE=paper
APP_ENV=prod


#############################
# Exchange configuration
#############################

EXCHANGE=kraken

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

TRADING_PAIR=BTC-EUR

# Less frequent polling is fine for low-risk swing trading
CHECK_INTERVAL_SECONDS=120


#############################
# Paper trading initial balances
#############################

PAPER_INITIAL_USD=8700
PAPER_INITIAL_BTC=0


#############################
# Strategy parameters (LOW RISK)
#############################

# Slower RSI – fewer, higher-quality signals
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Classic EMAs for smoother trend detection
EMA_FAST=10
EMA_SLOW=21

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Standard, wide Bollinger bands – only strongest deviations count
BOLLINGER_PERIOD=20
BOLLINGER_STD=2.2

ATR_PERIOD=14

# Higher threshold => fewer trades, higher signal quality
SIGNAL_THRESHOLD=65


#############################
# Position sizing & per-trade risk (LOW)
#############################

# Cap position size more conservatively
MAX_POSITION_PERCENT=50.0

# Typical position ~50% of portfolio when signal is strong
POSITION_SIZE_PERCENT=45.0

# Slightly tighter SL, slightly wider TP for better R/R
STOP_LOSS_ATR_MULTIPLIER=1.5
TAKE_PROFIT_ATR_MULTIPLIER=1.8
TRAILING_STOP_ATR_MULTIPLIER=1.2

MIN_ORDER_SIZE_USD=10.0


#############################
# Loss limiter (conservative)
#############################

# Tighter daily and hourly loss caps
MAX_DAILY_LOSS_PERCENT=4.0
MAX_HOURLY_LOSS_PERCENT=1.0


#############################
# Circuit breaker
#############################

# Very strong reaction to large price spikes
CIRCUIT_MAX_PRICE_MOVE=0.05
CIRCUIT_MAX_ERRORS=3

CIRCUIT_YELLOW_COOLDOWN=600
CIRCUIT_RED_COOLDOWN=1800
CIRCUIT_BLACK_COOLDOWN=7200


#############################
# Kill switch
#############################

KILL_SWITCH_FILE=./kill_switch.flag


#############################
# Database / Logging
#############################

DATABASE_URL=sqlite:///./data/trading_bot_low_risk.db

LOG_LEVEL=INFO
LOG_FILE=./logs/trading_bot_low_risk.log


#############################
# Notifications (optional)
#############################

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

ENABLE_TELEGRAM_NOTIFICATIONS=false

