#############################
# Environment / Mode
#############################

TRADING_MODE=paper
APP_ENV=prod


#############################
# Exchange configuration
#############################

EXCHANGE=kraken

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# BTC-EUR is the main pair (Kraken, 1h timeframe)
TRADING_PAIR=BTC-EUR

# Good compromise between responsiveness and API usage
CHECK_INTERVAL_SECONDS=90


#############################
# Paper trading initial balances
#############################

PAPER_INITIAL_USD=8700
PAPER_INITIAL_BTC=0


#############################
# Strategy parameters (BTC-EUR, 1h, BALANCED)
#############################

# Moderately reactive RSI – good for BTC-EUR 1h swings
RSI_PERIOD=10
RSI_OVERSOLD=28
RSI_OVERBOUGHT=72

# EMAs chosen for BTC 1h swing behaviour
EMA_FAST=9
EMA_SLOW=21

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Standard Bollinger settings – good baseline on 1h BTC-EUR
BOLLINGER_PERIOD=20
BOLLINGER_STD=2.0

# ATR 14 works well on 1h BTC data
ATR_PERIOD=14

# Balanced threshold: not too noisy, not too strict
SIGNAL_THRESHOLD=55


#############################
# Position sizing & risk (BALANCED)
#############################

# Allow medium-large positions, but not all-in
MAX_POSITION_PERCENT=75.0

# Typical position when signal is strong
POSITION_SIZE_PERCENT=70.0

# ATR-based levels tuned for BTC-EUR volatility on 1h
STOP_LOSS_ATR_MULTIPLIER=1.4
TAKE_PROFIT_ATR_MULTIPLIER=1.8
TRAILING_STOP_ATR_MULTIPLIER=1.0

MIN_ORDER_SIZE_USD=10.0


#############################
# Loss limiter (balanced)
#############################

# Balanced daily / hourly caps for a 100k SEK portfolio
MAX_DAILY_LOSS_PERCENT=6.0
MAX_HOURLY_LOSS_PERCENT=1.5


#############################
# Circuit breaker
#############################

# Typical large move threshold for BTC-EUR 1h
CIRCUIT_MAX_PRICE_MOVE=0.06
CIRCUIT_MAX_ERRORS=3

CIRCUIT_YELLOW_COOLDOWN=300
CIRCUIT_RED_COOLDOWN=900
CIRCUIT_BLACK_COOLDOWN=3600


#############################
# Kill switch
#############################

KILL_SWITCH_FILE=./kill_switch.flag


#############################
# Database / Logging
#############################

DATABASE_URL=sqlite:///./data/trading_bot_btceur_1h_balanced.db

LOG_LEVEL=INFO
LOG_FILE=./logs/trading_bot_btceur_1h_balanced.log


#############################
# Notifications (optional)
#############################

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

ENABLE_TELEGRAM_NOTIFICATIONS=false

